body>div.product
  position: relative
  width: 100%
  height: auto
  overflow: visible
  margin: 0 auto
  display: flex
  flex-direction: row
  align-items: flex-start
  flex-flow: row wrap
  justify-content: flex-start
  font-family: 'Source Sans Pro';
  div.product-container
    width:250px
    margin: 40px 50px
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column
    flex-flow: row wrap
    flex-wrap: wrap
    div.product-card
      width: 270px
      height: 370px
      transform: skew(0deg, -4deg) translateY(20px)
      display: flex
      flex-direction: column
      align-items: center
      justify-content: flex-start
      position: relative
      border-radius: 4px
      background-color: #ffffff
      padding: 20px 0
      box-shadow: 0 2px 1px -1px rgba(0,0,0,.12)
      .product-contents
        transform: skew(0deg, 4deg)
        display: flex
        flex-direction: column
        width: 90%
        height: 100%
        align-items: center
        .product-action-button
          position: absolute
          top: -5px
          right: -50px
          width: 80px
          height: 80px
          background-color: #8BC34A
          border-radius: 99px
          display: flex
          justify-content: center
          align-items: center
          cursor: pointer
          box-shadow: 0 7px 9px -4px rgba(118, 255, 3,.2),0 14px 21px 2px rgba(118, 255, 3,.14),0 5px 26px 4px rgba(118, 255, 3,.12)
          i
            line-height: 80px
            font-size: 40px
            color: #ffffff
        .products-title
          padding: 8px
          font-size: 18px
          line-height: 22px
          width: 100%
        .products-price
          position: absolute
          transform: skew(0deg, -4deg) translateY(20px)
          width: 120px
          height: 60px
          text-align: center
          background-color: #00BCD4
          display: flex
          color: #ffffff
          line-height: 60px
          font-size: 24px
          align-items: center
          justify-content: center
          bottom: -25px
          border-radius: 2px
          box-shadow: 0 7px 9px -4px rgba(24, 255, 255,.2),0 14px 21px 2px rgba(24, 255, 255,.14),0 5px 26px 4px rgba(24, 255, 255,.12)
          p
            transform: skew(0deg, 4deg)
            font-family: 'Open Sans'
            font-size: 18px
        .products-image
          width: 100%
          height: 250px
          overflow: hidden
          display: flex
          align-items: center
          justify-content: center
          flex-direction: column
          img
            max-height: 100%
            max-width: 100%





