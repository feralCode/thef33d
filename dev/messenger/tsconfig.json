{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "!typings/**",
        "!node_modules/**"
    ],
    "exclude": [
      "node_modules"
    ]
}